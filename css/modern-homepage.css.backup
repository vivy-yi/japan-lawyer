/* ============================================= */
/* AI能力展示区域样式 - 整合版本 */
/* 解决与ai-footer.css的样式冲突 */

/* 主容器样式 */
.ai-capabilities {
    padding: 80px 0;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    position: relative;
    overflow: hidden;
}

/* 背景装饰效果 */
.ai-capabilities::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
        radial-gradient(circle at 20% 20%, rgba(99, 102, 241, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(168, 85, 247, 0.1) 0%, transparent 50%);
    pointer-events: none;
}

/* 容器样式 */
.ai-capabilities .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--responsive-container-padding);
    position: relative;
    z-index: 1;
}

/* 标题样式 */
.capabilities-title {
    text-align: center;
    font-size: var(--responsive-font-3xl);
    font-weight: 700;
    margin-bottom: 60px;
    background: linear-gradient(135deg, #1e3a8f 0%, #7c3aed 50%, #2563eb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
}

.capabilities-title::after {
    content: '';
    position: absolute;
    bottom: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(135deg, #6366f1, #a855f7);
    border-radius: 2px;
}

/* 网格布局 - 移动优先设计，使用响应式变量 */
.capabilities-grid {
    display: grid;
    grid-template-columns: 1fr; /* 移动端：1列 */
    gap: var(--responsive-card-gap);
    margin-top: var(--responsive-spacing-xl);
}

/* 平板及以上：2列 */
@media (min-width: var(--breakpoint-sm)) {
    .capabilities-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* 桌面及以上：3列 */
@media (min-width: var(--breakpoint-lg)) {
    .capabilities-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}

/* 能力卡片样式 */
.capability-card {
    background: white;
    border-radius: 20px;
    padding: 40px 30px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(229, 231, 235, 0.8);
}

/* 卡片交互效果 - 包含可访问性支持 */
.capability-card:hover,
.capability-card:focus-within {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 20px 50px rgba(99, 102, 241, 0.2);
    border-color: rgba(99, 102, 241, 0.3);
}

/* 可访问性：确保卡片可以通过键盘访问 */
.capability-card:focus-within {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
}

/* 图标交互效果 */
.capability-card:hover .capability-icon,
.capability-card:focus-within .capability-icon {
    transform: scale(1.1) rotate(5deg);
    filter: drop-shadow(0 6px 20px rgba(99, 102, 241, 0.4));
}

/* 卡片背景装饰 */
.capability-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #6366f1, #a855f7, #3b82f6);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.capability-card:hover::before {
    opacity: 1;
}

/* 图标样式 */
.capability-icon {
    font-size: 3.5rem;
    margin-bottom: 20px;
    display: block;
    filter: drop-shadow(0 4px 10px rgba(99, 102, 241, 0.3));
    transition: all 0.3s ease;
}

/* 标题样式 */
.capability-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 20px 0 15px 0;
    color: #1e293b;
    line-height: 1.3;
    transition: color 0.3s ease;
}

.capability-card:hover .capability-title {
    color: #4f46e5;
}

/* 描述文本样式 */
.capability-desc {
    font-size: 1rem;
    line-height: 1.7;
    color: #64748b;
    margin: 0;
    transition: color 0.3s ease;
}

.capability-card:hover .capability-desc {
    color: #475569;
}

/* 响应式设计 - 使用断点变量 */
/* 大屏幕 (1200px+) */
@media (min-width: var(--breakpoint-xl)) {
    .capabilities-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 40px;
    }

    .capability-card {
        padding: 50px 35px;
    }
}

/* 中等屏幕 (768px - 1199px) */
@media (min-width: var(--breakpoint-md)) and (max-width: calc(var(--breakpoint-xl) - 1px)) {
    .capabilities-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 25px;
    }

    .capability-card {
        padding: 35px 25px;
    }

    .capabilities-title {
        font-size: var(--responsive-font-2xl);
    }
}

/* 平板设备 (576px - 767px) */
@media (min-width: var(--breakpoint-sm)) and (max-width: calc(var(--breakpoint-md) - 1px)) {
    .capabilities-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 25px;
    }

    .capability-card {
        padding: 30px 20px;
    }

    .capabilities-title {
        font-size: 2.2rem;
    }

    .capability-icon {
        font-size: 3rem;
    }

    .capability-title {
        font-size: 1.3rem;
    }
}

/* 手机设备 (575px以下) */
@media (max-width: calc(var(--breakpoint-sm) - 1px)) {
    .ai-capabilities {
        padding: 60px 0;
    }

    .capabilities-grid {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .capability-card {
        padding: 30px 20px;
    }

    .capabilities-title {
        font-size: var(--responsive-font-2xl);
        margin-bottom: 40px;
    }

    .capability-icon {
        font-size: 2.8rem;
        margin-bottom: 15px;
    }

    .capability-title {
        font-size: 1.25rem;
        margin: 15px 0 12px 0;
    }

    .capability-desc {
        font-size: 0.95rem;
        line-height: 1.6;
    }
}

/* 小屏幕手机优化 */
@media (max-width: 380px) {
    .ai-capabilities .container {
        padding: 0 15px;
    }

    .capability-card {
        padding: 25px 15px;
    }

    .capabilities-title {
        font-size: 1.8rem;
    }
}

/* 动画效果 */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* 为卡片添加渐入动画 */
.capability-card {
    animation: fadeInUp 0.6s ease-out;
    animation-fill-mode: both;
}

.capability-card:nth-child(1) { animation-delay: 0.1s; }
.capability-card:nth-child(2) { animation-delay: 0.2s; }
.capability-card:nth-child(3) { animation-delay: 0.3s; }
.capability-card:nth-child(4) { animation-delay: 0.4s; }
.capability-card:nth-child(5) { animation-delay: 0.5s; }
.capability-card:nth-child(6) { animation-delay: 0.6s; }

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
    .ai-capabilities {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    }

    .capability-card {
        background: #334155;
        border-color: rgba(71, 85, 105, 0.8);
        color: #f1f5f9;
    }

    .capability-title {
        color: #f1f5f9;
    }

    .capability-desc {
        color: #cbd5e1;
    }

    .capability-card:hover .capability-desc {
        color: #e2e8f0;
    }

    .capabilities-title {
        background: linear-gradient(135deg, #60a5fa 0%, #c084fc 50%, #93c5fd 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
}

/* 减少动画偏好支持 */
@media (prefers-reduced-motion: reduce) {
    .capability-card {
        animation: none;
    }

    .capability-card:hover {
        transform: none;
    }

    .capability-icon {
        transition: none;
    }

    .capability-card:hover .capability-icon {
        transform: none;
    }
}

